rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all files
    match /{allPaths=**} {
      allow read: if true;
    }
    
    // Allow public write access to the 'issues' folder
    // This is required for anonymous users to upload report images
    match /issues/{allPaths=**} {
      allow write: if true;
    }
  }
}
